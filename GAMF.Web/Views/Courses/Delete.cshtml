}

<h1>@Resources.Delete</h1>

<h3>@Resources.AreYouSurYouWantToDelete</h3>
<div>
    <h4>@Resources.Course</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
